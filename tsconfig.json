{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "./",
    "outDir": "dist",
    "lib": ["ES2020", "DOM"],
    "types": ["node"]
  },
  "include": [
    "scripts/**/*.ts"
  ]
}
